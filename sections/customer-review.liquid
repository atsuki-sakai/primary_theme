{% schema %}
{
  "name": "Customer Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "セクション見出し",
      "default": "お客様の声"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "testimonial_text",
          "label": "お客様の声"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Testimonials",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="customer-testimonials">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <div class="testimonials">
      {% for block in section.blocks %}
        <div class="testimonial">
          <img class="testimonial-img" src="https://via.placeholder.com/80x80" alt="customer" width="80" height="80" /><p>{{ block.settings.testimonial_text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.customer-testimonials {
  padding: 2rem 1rem;
  background-color: #f9f9f9;
}

.customer-testimonials h2 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  text-align: center;
}

.testimonials {
  display: grid;
  gap: 1rem;
  max-width: 800px;
  margin: 0 auto;
}
.testimonial-img {
  width:80px;
  height: 80px;
  border-radius: 999px;
  
}
.testimonial {
  display: flex;
  padding: 0;
    margin: 0;
  padding: 0 0.5rem;
  background: #fff;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  font-size: 0.9rem;
  line-height: 1.6;
}

@media (min-width: 600px) {
  .testimonials {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}
</style>
